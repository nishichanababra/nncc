<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryDetailActivity"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="31dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/app_backcolor"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/padding_8dp"
        app:cardElevation="@dimen/padding_6dp">

        <RelativeLayout
            android:id="@+id/rv_sub_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/tvStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5dp"
                android:text="STORE NAME"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_below="@+id/tvStore"
                android:src="@drawable/thumbnail"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/iv_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/Text18"
                android:layout_marginTop="-16dp"
                android:layout_marginRight="@dimen/Text15"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:padding="@dimen/padding_4dp"
                android:text="Follow the Store"
                android:textAllCaps="false"
                android:textColor="#fcfafa"
                android:textSize="@dimen/text_m" />

            <ImageView
                android:id="@+id/iv_image1"
                style="@style/ListViewIconStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/one"
                android:layout_marginTop="@dimen/padding_6dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_below="@+id/btnLogin"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_image2"
                style="@style/ListViewIconStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/two"
                android:layout_toRightOf="@+id/iv_image1"
                android:layout_marginTop="@dimen/padding_6dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_below="@+id/btnLogin"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_image3"
                style="@style/ListViewIconStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/three"
                android:layout_toRightOf="@+id/iv_image2"
                android:layout_marginTop="@dimen/padding_6dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_below="@+id/btnLogin"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_image4"
                style="@style/ListViewIconStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/four"
                android:layout_toRightOf="@+id/iv_image3"
                android:layout_marginTop="@dimen/padding_6dp"
                android:layout_margin="@dimen/padding_5dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_below="@+id/btnLogin"
                android:textColor="@color/white"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/Text20"
                android:layout_below="@+id/iv_image1"
                android:divider="@android:color/transparent"
                android:layout_marginBottom="@dimen/padding_16dp"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/padding_8dp"
                app:cardElevation="@dimen/padding_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvhours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5dp"
                    android:text="OPENING HOURS"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:textStyle="bold"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="60dp"
                        android:layout_height="5dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tvhours"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/tvmonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:text="Monday"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/view"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <TextView
                        android:id="@+id/tvtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:text="08:00 am - 11:00 pm"
                        android:layout_below="@+id/view"
                        android:textSize="15sp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <View
                        android:id="@+id/viewmon"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tvtime"
                        android:background="@color/app_backcolor" />

                    <TextView
                        android:id="@+id/tvtue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:text="Tuesday"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/viewmon"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <TextView
                        android:id="@+id/tvtimetue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:text="08:00 am - 11:00 pm"
                        android:layout_below="@+id/viewmon"
                        android:textSize="15sp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <View
                        android:id="@+id/viewtue"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tvtue"
                        android:background="@color/app_backcolor" />


                    <TextView
                        android:id="@+id/tvwed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:text="Wednesday"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/viewtue"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <TextView
                        android:id="@+id/tvtimewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:text="08:00 am - 11:00 pm"
                        android:layout_below="@+id/viewtue"
                        android:textSize="15sp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <View
                        android:id="@+id/viewwed"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tvwed"
                        android:background="@color/app_backcolor" />

                    <TextView
                        android:id="@+id/tvthu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:text="Thursday"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/viewwed"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <TextView
                        android:id="@+id/tvtimethu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:text="08:00 am - 11:00 pm"
                        android:layout_below="@+id/viewwed"
                        android:textSize="15sp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <View
                        android:id="@+id/viewthu"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tvthu"
                        android:background="@color/app_backcolor" />

                    <TextView
                        android:id="@+id/tvfri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:text="Friday"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/viewthu"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <TextView
                        android:id="@+id/tvtimefri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:text="08:00 am - 11:00 pm"
                        android:layout_below="@+id/viewthu"
                        android:textSize="15sp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <View
                        android:id="@+id/viewfri"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tvfri"
                        android:background="@color/app_backcolor" />

                    <TextView
                        android:id="@+id/tvsat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:text="Saturday"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/viewfri"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                    <TextView
                        android:id="@+id/tvtimesat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_5dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:text="08:00 am - 11:00 pm"
                        android:layout_below="@+id/viewfri"
                        android:textSize="15sp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/padding_10dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>