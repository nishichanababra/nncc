<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_dashdetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="138dp"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="31dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/padding_8dp"
        app:cardElevation="@dimen/padding_6dp">

        <RelativeLayout
            android:id="@+id/rv_sub_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                style="@style/ListViewIconStyle"
                android:layout_width="138dp"
                android:layout_height="125dp"
                android:src="@drawable/home_thumbnail"
                android:textColor="@color/white"/>

         <TextView
             android:id="@+id/tvStore"
             android:layout_width="wrap_content"
             android:layout_height="10dp"
             android:text="Store Name"
             android:textSize="9sp"
             android:textColor="@color/colorPrimary"
             android:layout_marginLeft="@dimen/padding_4dp"
             android:textStyle="bold"
             android:layout_below="@+id/iv_icon"/>

            <TextView
                android:id="@+id/tv_Catnm"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="Category Name"
                android:textSize="7sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:textStyle="normal"
                android:layout_below="@+id/tvStore"/>

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:textSize="7sp"
                android:src="@drawable/like_filled"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/tvStore"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/padding_12dp"
                android:textStyle="normal"
                android:layout_below="@+id/iv_icon"/>

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="10"
                android:textSize="9sp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/tvStore"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="36dp"
                android:textStyle="normal"
                android:layout_below="@+id/iv_icon"/>

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/chat"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/tv_like"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:textStyle="normal"
                android:layout_below="@+id/iv_icon"/>

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="10"
                android:textSize="9sp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_msg"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:textStyle="normal"
                android:layout_below="@+id/iv_icon"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>