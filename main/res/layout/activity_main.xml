<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_adminlogin"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:src="@drawable/login" />


            <android.support.v7.widget.CardView
                android:id="@+id/rl_employeelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_adminlogin"
                android:layout_marginBottom="@dimen/padding_24dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="150dp"
                app:cardCornerRadius="@dimen/padding_10dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/rl_employeelist"
                    android:background="@color/white"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/padding_2dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tnl_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_4dp"
                        android:layout_marginTop="@dimen/padding_4dp"
                        android:layout_marginRight="@dimen/padding_4dp"
                        android:foregroundTint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tedt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/padding_4dp"
                            android:layout_marginRight="@dimen/padding_4dp"
                            android:hint="Enter your Email"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/Text14" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tnl_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foregroundTint="@color/colorPrimary"
                        android:layout_below="@+id/tnl_email"
                        android:layout_marginLeft="@dimen/padding_4dp"
                        android:layout_marginRight="@dimen/padding_4dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tedt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/padding_4dp"
                            android:layout_marginRight="@dimen/padding_4dp"
                            android:hint="Enter your Password"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/Text14" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/llicon"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/Text15"
                        android:layout_below="@+id/tnl_password"
                        android:layout_centerInParent="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_facebook"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/f" />

                        <ImageView
                            android:id="@+id/iv_gmail"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignTop="@+id/llicon"
                            android:layout_marginLeft="@dimen/padding_10dp"
                            android:layout_toRightOf="@+id/iv_facebook"
                            android:src="@drawable/google" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:layout_below="@+id/llicon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/Text18"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/Text15"
                        android:layout_marginBottom="@dimen/Text15"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#fcfafa"
                        android:textSize="@dimen/text_m" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>