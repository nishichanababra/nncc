<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_dashdetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_8dp"
    android:layout_marginRight="@dimen/padding_8dp"
    android:layout_marginTop="@dimen/padding_10dp"
    app:cardCornerRadius="@dimen/padding_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_2dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlticons"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/cardview_border"
                    android:gravity="right|center">


                    <TextView
                        android:id="@+id/tv_salesno"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/padding_16dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_orderno"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/padding_4dp"
                        android:layout_toRightOf="@+id/tv_salesno"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_m"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/iv_view_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/iv_edit_employee"
                        android:layout_toStartOf="@+id/iv_edit_employee"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textSize="@dimen/padding_18dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/iv_edit_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/iv_delete_employee"
                        android:layout_toStartOf="@+id/iv_delete_employee"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textSize="@dimen/padding_18dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/iv_delete_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textSize="@dimen/padding_18dp"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="@dimen/tv_width"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlticons"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text="Customer Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlticons"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginRight="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_toRightOf="@+id/tv_gtotal_title"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/eight"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_Odate_title"
                    android:layout_width="@dimen/tv_width"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_title"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text="Order Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_m" />


                <TextView
                    android:id="@+id/tv_Odate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginRight="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_toRightOf="@+id/tv_name_title"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/eight"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_qty_title"
                    android:layout_width="@dimen/tv_width"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_Odate_title"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text="Quantity"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16" />


                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_Odate"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginRight="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_toRightOf="@+id/tv_qty_title"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/eight"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_discount_title"
                    android:layout_width="@dimen/tv_width"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_qty_title"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text="Discount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_m" />


                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_qty"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginRight="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_toRightOf="@+id/tv_discount_title"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/eight"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_gtotal_title"
                    android:layout_width="@dimen/tv_width"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount_title"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text="Grand Total"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_gtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount"
                    android:layout_marginLeft="@dimen/padding_4dp"
                    android:layout_marginRight="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_toRightOf="@+id/tv_gtotal_title"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/eight"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/Text16"
                    android:textStyle="bold" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.v7.widget.CardView>